		$(document).on("change", "#file-form input[type='file']", function(){
			var index = $("#index").val();
			var fileId = $(this).attr('id');
			var fileIndex = fileId.split('file')[1];
			var file = pathToFile($(this).val());
			var fileName = file.name+"."+file.extension;
			var fileNameHtml = '<li style="border: 1px solid #DDDDDD; padding: 5px; background-color:#F5FAFD;">'+fileName+' <a class="btn btn_gray" href="javascript:void(0)" fileId="'+ fileId +'" onclick="deleteNewFile(this)">삭제</a></li>';
			$(this).addClass('hide');
			$("#fileInputs ul").append(fileNameHtml);
			addFileInput();
		});
		
		$( "#type" ).change(function() {
			  if (this.value == 2) {
