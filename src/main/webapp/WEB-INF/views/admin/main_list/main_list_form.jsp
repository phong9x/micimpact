		$(function() {
			// thumbnail이 없을 경우
			if ($("#cards_thumbnailUrl").val() == '') {
				$("#cards_thumbnailUrl").parent().find("img").remove();
				$("#cards_thumbnailUrl").parent().find("a").remove();
